{
  "methods": {
    "post": [
      {
        "action": "/create-account/",
        "scripts": [
          {
            "switch": true,
            "paths": [
              "./create-profile-template.sql"
            ]
          },
          {
            "switch": "account-type",
            "case": "game",
            "paths": [
              "./update-game-account-template.sql"
            ],
            "template variables": [
              {
                "name": "password"
              }
            ]
          },
          {
            "switch": "account-type",
            "case": "canvas",
            "paths": [
              "./update-canvas-account-template.sql"
            ],
            "template variables": [
              {
                "name": "pat"
              }
            ]
          }
        ],
        "template variables": [
          {
            "name": "user-email"
          },
          {
            "name": "user-name"
          },
          {
            "name": "user-type"
          },
          {
            "name": "user-image"
          },
          {
            "name": "style-sheet"
          },
          {
            "name": "preferred-language"
          }
        ]
      },
      {
        "action": "/update-password/",
        "scripts": [
          {
            "switch": true,
            "paths": [
              "./update-game-account-template.sql"
            ]
          }
        ],
        "template variables": [
          {
            "name": "user-name"
          },
          {
            "name": "password"
          }
        ]
      }
    ]
  },
  "schema": {
    "user-email": {
      "regexp": "^.{0,40}$",
      "type": "String"
    },
    "user-name": {
      "regexp": "^.{0,20}$",
      "type": "String"
    },
    "user-type": {
      "regexp": "^(educator|student)$",
      "type": "String"
    },
    "user-image": {
      "regexp": "^.{0,2048}$",
      "type": "String"
    },
    "style-sheet": {
      "regexp": "^(lightmode|darkmode)$",
      "type": "String"
    },
    "preferred-language": {
      "regexp": "^.{0,5}$",
      "type": "String"
    },
    "password": {
      "regexp": "^.{0,40}$",
      "type": "String",
      "processes": [
        "salt",
        "hash"
      ]
    },
    "pat": {
      "regexp": "^.{12}$",
      "type": "String",
      "processes": [
        "salt",
        "hash"
      ]
    }
  }
}