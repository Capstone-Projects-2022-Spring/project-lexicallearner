{
  "schemas": {
    "user-email": {
      "regexp": "^.{0,40}$",
      "type": "String"
    },
    "user-name": {
      "regexp": "^.{0,20}$",
      "type": "String"
    },
    "user-type": {
      "regexp": "^(educator|student)$",
      "type": "String"
    },
    "user-image": {
      "regexp": "^.{0,2048}$",
      "type": "String"
    },
    "style-sheet": {
      "regexp": "^(lightmode|darkmode)$",
      "type": "String"
    },
    "preferred-language": {
      "regexp": "^.{0,5}$",
      "type": "String"
    }
  },
  "methods": {
    "post": [
      {
        "action": "/create-account/",
        "script": "./create-game-account-template.sql",
        "template variables": [
          {
            "name": "user-email"
          },
          {
            "name": "user-name"
          },
          {
            "name": "user-type"
          },
          {
            "name": "user-image"
          },
          {
            "name": "style-sheet"
          },
          {
            "name": "preferred-language"
          },
          {
            "name": "level",
            "value": 1
          },
          {
            "name": "score",
            "value": 0
          }
        ]
      }
    ]
  }
}